generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") 
}

model DealSeen {
  id            String   @id @default(cuid())
  context       String
  origin        String
  destination   String
  departDate    String

  // keep the real value nullable (for display)
  returnDate    String?

  // NEW: non-nullable key used for uniqueness
  returnDateKey String  @default("")

  lastPrice     Float
  lastSeenAt    DateTime @default(now())
  lastAlertedAt DateTime?

  @@unique([context, origin, destination, departDate, returnDateKey], name: "deal_seen_key")
}