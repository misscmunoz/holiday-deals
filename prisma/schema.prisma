generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DealSeen {
  id            String   @id @default(cuid())
  context       String   // e.g. "regular" or "bh:2026-05-04"
  origin        String
  destination   String
  departDate    String
  returnDate    String?
  lastPrice     Float
  lastSeenAt    DateTime @default(now())
  lastAlertedAt DateTime?

  @@unique([context, origin, destination, departDate, returnDate], name: "context_origin_destination_departDate_returnDate")
}
